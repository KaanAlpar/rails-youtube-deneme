<%= link_to 'Home', root_path, class: 'btn btn-secondary m-2' %>
<div class="container my-3">
  <div class="row">
    <div class="col-12">
      <h1><%= @translation.video_title %></h1>
      <p>URL: <%= @translation.url %></p>
      <h2>Sentences</h2>
      <ul class="list-group">
      <% @translation.sentences.each do |sentence| %>
        <%= link_to flashcard_path(sentence.flashcard), class: 'text-decoration-none' do %>
          <li class="list-group-item mb-1"><%= sentence.content %></li>
        <% end %>
      <% end %>
      </ul>
    </div>
  </div>
</div>
